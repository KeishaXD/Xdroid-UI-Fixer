<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@id/container"
    android:background="@drawable/xd_pref_card_sin"
    android:clipToPadding="false"
    android:layout_width="fill_parent"
    android:layout_height="150.0dip"
    android:layout_marginHorizontal="@dimen/xd_pref_card_horizontal_padding"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@id/xd_about_phone_header_illustration_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/system_accent2_100"
        app:cardCornerRadius="@dimen/xd_pref_card_radius"
        app:cardElevation="0.0dip">
        <LinearLayout
            android:gravity="center_vertical"
            android:clipToPadding="false"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:minHeight="?android:listPreferredItemHeightSmall"
            android:paddingStart="?android:listPreferredItemPaddingStart"
            android:paddingEnd="?android:listPreferredItemPaddingEnd">
            <RelativeLayout
                android:paddingTop="16.0dip"
                android:paddingBottom="16.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_marginStart="-8.0dip">
                <TextView
                    android:textColor="@android:color/system_accent1_800"
                    android:ellipsize="marquee"
                    android:id="@android:id/title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    style="@style/xd_text_primary_medium" />
                <TextView
                    android:textColor="@android:color/system_accent1_700"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/xd_device_name_summary"
                    android:singleLine="true"
                    android:layout_below="@android:id/title"
                    android:layout_alignStart="@android:id/title"
                    style="@style/xd_text_secondary" />
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#00000000"
                app:cardElevation="0.0dip">
                <androidx.cardview.widget.CardView
                    android:id="@id/xd_about_phone_header_illustration"
                    android:layout_width="100.0dip"
                    android:layout_height="300.0dip"
                    android:layout_marginTop="18.0dip"
                    app:cardCornerRadius="14.0dip"
                    app:cardElevation="0.0dip">
                    <com.xdroidui.preferences.xdCardPrefWall
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:scaleType="centerCrop"
                        android:elevation="0.0dip" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>