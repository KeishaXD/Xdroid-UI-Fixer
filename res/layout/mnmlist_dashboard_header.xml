<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@id/container"
    android:background="@drawable/xd_pref_card_sin"
    android:clipToPadding="false"
    android:layout_width="fill_parent"
    android:layout_height="210.0dip"
    android:layout_marginTop="4.0dip"
    android:layout_marginBottom="4.0dip"
    android:layout_marginHorizontal="@dimen/xd_pref_card_horizontal_padding"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:id="@id/xd_about_phone_header_illustration"
        android:layout_width="fill_parent"
        android:layout_height="210.0dip"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="@dimen/xd_pref_card_radius"
        app:cardElevation="0.0dip">
        <com.xdroidui.preferences.xdCardPrefWallBlur
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"
            android:elevation="0.0dip" />
        <LinearLayout
            android:background="@color/xd_background1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:alpha="0.8" />
        <RelativeLayout
            android:layout_gravity="start|bottom|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24.0dip"
            android:layout_weight="1.0"
            android:layout_marginStart="16.0dip"
            android:layout_marginEnd="16.0dip">
            <ImageView
                android:id="@id/mnmlist_dashboard_icon"
                android:layout_width="52.0dip"
                android:layout_height="52.0dip"
                android:src="@drawable/xd_icon"
                android:tint="?android:textColorPrimary" />
            <TextView
                android:id="@id/mnmlist_dashboard_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/mnmlist_dashboard_title"
                android:layout_below="@id/mnmlist_dashboard_icon"
                android:layout_alignStart="@id/mnmlist_dashboard_icon"
                style="@style/xd_text_primary_medium" />
            <TextView
                android:id="@id/mnmlist_dashboard_summary"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/xd_about_desc"
                android:layout_below="@id/mnmlist_dashboard_title"
                android:layout_alignStart="@id/mnmlist_dashboard_title"
                android:justificationMode="inter_word"
                style="@style/xd_text_secondary" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>