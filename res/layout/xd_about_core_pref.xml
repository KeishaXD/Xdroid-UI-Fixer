<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@id/container"
    android:background="@drawable/xd_pref_card_sin"
    android:clipToPadding="false"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4.0dip"
    android:layout_marginBottom="4.0dip"
    android:layout_marginHorizontal="@dimen/xd_pref_card_horizontal_padding"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:gravity="center_vertical"
        android:clipToPadding="false"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:minHeight="?android:listPreferredItemHeightSmall"
        android:paddingHorizontal="@dimen/xd_pref_card_horizontal_padding"
        android:paddingVertical="8.0dip">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@android:id/icon_frame"
            android:paddingTop="4.0dip"
            android:paddingBottom="4.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.android.internal.widget.PreferenceImageView
                android:id="@android:id/icon"
                android:padding="6.0dip"
                android:layout_width="90.0dip"
                android:layout_height="90.0dip"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true" />
        </LinearLayout>
        <RelativeLayout
            android:paddingTop="16.0dip"
            android:paddingBottom="16.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:layout_marginStart="16.0dip"
            android:layout_marginEnd="16.0dip">
            <TextView
                android:ellipsize="marquee"
                android:id="@android:id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                style="@style/xd_text_primary" />
            <TextView
                android:id="@android:id/summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip"
                android:maxLines="10"
                android:layout_below="@android:id/title"
                android:layout_alignStart="@android:id/title"
                style="@style/xd_text_secondary" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>